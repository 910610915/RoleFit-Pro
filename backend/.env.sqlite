# SQLite轻量部署配置
# 使用此配置无需安装PostgreSQL/MySQL

# 应用配置
APP_NAME=HardwareBenchmark
DEBUG=true

# 数据库 - 使用SQLite，无需安装数据库软件
DATABASE_URL=sqlite+aiosqlite:///./hardware_benchmark.db
DATABASE_URL_SYNC=sqlite:///./hardware_benchmark.db

# Redis - 开发环境可选，注释掉则不使用
# REDIS_URL=redis://localhost:6379/0

# JWT配置
SECRET_KEY=dev-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - 允许所有来源（开发环境）
CORS_ORIGINS=["*"]
